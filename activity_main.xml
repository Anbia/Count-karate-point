<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.doxt.android.countscore.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/teamRed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Red"
                android:textColor="#FFEBEE"
                android:textSize="25dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/point_to_team_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="40dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ippon point"
                android:textColor="#FFEBEE"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:onClick="addPointIpponTeamRed"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wazari Point"
                android:textColor="#FFEBEE"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:onClick="addPointWazariTeamRed"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sambon Point"
                android:textColor="#FFEBEE"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="addPointSambonTeamRed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/teamBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Blue"
                android:textSize="25dp"
                android:textColor="#FFEBEE"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/point_to_team_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ippon point"
                android:textColor="#FFEBEE"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:onClick="addPointIpponTeamBlue" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wazari point"
                android:textColor="#FFEBEE"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:onClick="addPointWazariTeamBlue"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sambon point"
                android:textColor="#FFEBEE"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:onClick="addPointSambonTeamBlue"/>


        </LinearLayout>

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:textColor="#FFEBEE"
            android:onClick="resetScore"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
